                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="11sp"
                            android:text="17:10"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:text="9" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/edge_grid_bg"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="11sp"
                            android:text="18:10"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/edge_grid_bg"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="11sp"
                            android:text="19:10"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:text="A" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/edge_grid_bg"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="11sp"
                            android:text="20:10"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
