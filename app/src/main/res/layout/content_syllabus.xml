                            android:textSize="11sp"
                            android:text="10:10"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:text="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/edge_grid_bg"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="11sp"
                            android:text="11:10"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:text="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/edge_grid_bg"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="11sp"
                            android:text="13:00"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:text="5" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/edge_grid_bg"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="11sp"
                            android:text="14:00"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:text="6" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/edge_grid_bg"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="11sp"
                            android:text="15:00"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:text="7" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/edge_grid_bg"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:textSize="11sp"
